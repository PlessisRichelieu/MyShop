@model IEnumerable<MyShop.Core.ViewModels.BasketItemViewModel>

@{
    ViewBag.Title = "Basket";
}

<h2>Basket</h2>


<table class="table">
    <tr>
        <th>

        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            Total
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td> <img class="img" src="~/Content/ProductImages/@item.ImageUrl" /></td>
        <td>
            @Html.DisplayFor(modelItem => item.ProductName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Quantity)
        </td>
        <td>
            @String.Format("{0:c}", item.Price)
        </td>
        <td>
            @String.Format("{0:c}", item.Price*item.Quantity)
        </td>
        <td>
           <a href="@Url.Action("RemoveFromBasket", "Basket", new { Id=item.Id})" class="btn-danger"> Delete </a>
    </tr>
}
    <tr>

        <td colspan="4" style="text-align:right"><strong> BasketTotal </strong> </td>
        
        <td> @String.Format("{0:c}",(from m in Model select m.Price*m.Quantity).Sum()) </td>
        <td><a href="@Url.Action("Checkout", "Basket")"> Checkout </a></td>

    </tr>
   

</table>
